<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CRM Application  Automation" parallel="none">

	<listeners>
		<listener class-name="com.crm.qa.listeners.SuiteListener" />
		<listener class-name="com.crm.qa.listeners.TestListener" />
		<listener class-name="com.crm.qa.listeners.ExecutionListener" />
	</listeners>

	<test name="Login Test">
		<classes>
			<class name="com.crm.qa.loginpage.LoginPageTest" />
		</classes>
	</test>

	<test name="Home Page Test">
		<classes>
			<class name="com.crm.qa.homepage.HomePageTest" />
		</classes>
	</test>

	<test name="Create Contacts Test">
		<classes>
			<class name="com.crm.qa.test.contactspage.CreateContactsTest" />
		</classes>
	</test>

	<test name="Delete Contacts Test">
		<classes>
			<class name="com.crm.qa.test.contactspage.DeleteContactsTest" />
		</classes>
	</test>

	<test name="Logout Test">
		<classes>
			<class name="com.crm.qa.logout.LogoutPageTest" />
		</classes>
	</test>




</suite>